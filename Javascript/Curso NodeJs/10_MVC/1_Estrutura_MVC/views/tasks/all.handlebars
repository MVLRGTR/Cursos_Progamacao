<h1>Todas as Tasks</h1>

<ul class="tasks-list">
    {{#each tasks}}
        <li>   
            {{#if this.done}}
                <a href="/task/edit/{{this.id}}" class="title_done">{{this.title}}</a>
            {{else}}
                <a href="/task/edit/{{this.id}}" class="title">{{this.title}}</a>
            {{/if}}
            <div class="actions">
                <form action="/task/done" method="post">
                    <input type="hidden" name="idtask" value="{{this.id}}">
                    <button type="submit">
                        <i class="bi bi-check2"></i>
                    </button>
                </form>
                <a href="/task/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
                <form action="/task/delete" method="post">
                    <input type="hidden" name="idtask" value="{{this.id}}">
                    <button type="submit">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </form>
            </div>
        </li>
    {{/each}}
</ul>